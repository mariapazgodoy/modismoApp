<!DOCTYPE html>
<html>
	<head>
	    <meta charset="utf-8">
		<title> <%= title %> </title>
	    <meta name="description" content="">
	    <meta name="viewport" content="width=device-width">
	    <!-- bower:css -->
	    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
	    <!-- endbower -->
	    <!-- build:css(.tmp) styles/main.css -->
	    <link rel="stylesheet" href="/styles/main.css">
	    <link rel="stylesheet" href="/styles/font-awesome.min.css">
	    <!-- endbuild -->
	</head>
	<body>
	    <!-- HEADER -->
	    <header id="header">
	        <div class="container">
	          <div class="navbar-left">
	            <h1 style="font-weight: 100;color: #fff;">Clínica de Reproducción Humana </br> Universidad de Valparaíso</h1>
	          </div>
	          <div class="navbar-right">
	            <a href="#">
	              <img class="pull-right" src="images/logoblanco.png" alt="" style="padding-top: 15px;">
	            </a>
	          </div>
	        </div><!--/.container-->
	    </header><!--/header-->

	    <section style="background: #fff;">
			<div class="container"  id="containerPpal" style="padding: 80px 0px">
			<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3 contact-form" >	
				<!-- Mostrar Mensajes Flash -->
				<% for(var i in messages){ %>
					<div class="flash alert alert-danger fade in alert-dismissable text-center"><%= messages[i] %></div>
				<% } %>
				<h1 class="center">Ingreso</h1>
				<form action="/signin" method="post">
					<p class="lead center">Ingrese con su nombre de usuario y su contraseña</p>
					<div class="form-group">
						<label>Nombre de Usuario</label>
						<input type="text" class="form-control" placeholder="Ingrese su nombre de usuario" name="username">
					</div>
					<div class="form-group">
						<label>Contraseña</label>
						<input type="password" class="form-control" placeholder="Ingrese su contraseña" name="password">
					</div>
					<div class="center">
						<button type="submit" class="btn btn-primary btn-lg" ><i class="fa fa-sign-in"></i> Ingresar</button>
					</div>
				</form>
			</div>
			</div>
	    </section>

	    <!-- FOOTER -->
	    <footer id="footer" class="midnight-blue">
	    <div class="container">            
	      <div class="row center">
	        <div class="col-sm-12">
	          <img src="images/logoblanco.png"> 
	          <ul>
	            <li style="margin-top: 15px;"><a>Clínica de Reproducción Humana</a></li></br>
	            <li><a>Hontaneda 2664, Valparaíso. Chile</a></li></br>
	            <li><a>Fono: +56 (32) 250 7313</a></li></br>
	          </ul>
	        </div>
	      </div>
	    </div></br></br></br>
	  </footer><!--/#footer-->

	</body>
</html>
